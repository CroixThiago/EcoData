        "supabase": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@supabase/mcp-server-supabase",
                "--access-token=${SUPABASE_ACCESS_TOKEN}"
            ]
        },
        // PostgreSQL MCP - Direct read-only access to PostgreSQL databases
        "postgres": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-postgres",
                "postgresql://ecodata_admin:secure_password@localhost:5432/ecodata_core"
            ]
        },
        // Upstash (Redis) MCP - Redis cache & queue management
        "upstash": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@upstash/mcp-server"
            ],
            "env": {
                "UPSTASH_EMAIL": "${UPSTASH_EMAIL}",
                "UPSTASH_API_KEY": "${UPSTASH_API_KEY}"
            }
        },
